{
    "compilerOptions": {
        "baseUrl": ".",

        "traceResolution": true,
        "noImplicitReturns": true,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "mapRoot": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSourceMap": true,
        "target": "es2015",
        "typeRoots": [
            "../node_modules/@types"
        ]
    }
}